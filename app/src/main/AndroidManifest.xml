<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aleperf.pathfinder.copernicana">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".CopernicanaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".intro.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".apod.ApodActivity"
            android:parentActivityName=".intro.MainActivity" />
        <activity
            android:name=".apod.ApodDetailActivity"
            android:parentActivityName=".apod.ApodActivity" />
        <activity android:name=".epic.EpicActivity" />
        <activity android:name=".mars.MarsActivity" />
        <activity
            android:name=".apod.ApodSearchActivity"
            android:parentActivityName=".apod.ApodActivity" />
        <activity
            android:name=".apod.ApodFavoritesActivity"
            android:parentActivityName=".apod.ApodActivity" />
        <activity android:name=".apod.ApodDisplayAllActivity"></activity>
    </application>

</manifest>