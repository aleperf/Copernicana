<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/apod_card_width"
    android:layout_height="@dimen/apod_card_height"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/apod_card_margin_bottom"
    android:layout_marginTop="@dimen/apod_card_margin_top"
    app:cardCornerRadius="@dimen/intro_card_corner_radius">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/apod_card_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/apod_card_rv_title"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/nasa_43566_unsplash" />


        <ImageView
            android:id="@+id/apod_card_fixed_text_bg"
            android:layout_width="0dp"
            android:layout_height="@dimen/apod_card_text_background"
            android:contentDescription="@string/no_description_decorative_image"
            app:layout_constraintBottom_toBottomOf="@+id/apod_card_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@color/apod_text_bg_transp" />

        <TextView
            android:id="@+id/apod_card_intro_title"
            style="@style/IntroCardTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/apod_card_rv_title"
            android:textColor="@color/intro_rv_font_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/apod_card_fixed_text_bg" />

        <TextView
            android:id="@+id/apod_card_rv_sub"
            style="@style/IntroCardTextSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/apod_card_sub_padding_top"
            android:paddingEnd="@dimen/apod_card_sub_padding_side"
            android:paddingStart="@dimen/apod_card_sub_padding_side"
            app:layout_constraintEnd_toEndOf="@+id/apod_card_fixed_text_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apod_card_intro_title"
            tools:text="@string/apod_title_tools_text" />

        <TextView
            android:id="@+id/apod_card_rv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/apod_card_date_margin_bottom"
            android:layout_marginStart="@dimen/apod_card_date_margin_start"
            android:layout_marginTop="@dimen/apod_card_sub_padding_top"
            android:textColor="@color/intro_rv_font_color"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apod_card_rv_sub"
            tools:text="@string/apod_date_tools_text" />

        <ImageView
            android:id="@+id/media_type_image_icon"
            android:layout_width="@dimen/media_type_icon_side"
            android:layout_height="@dimen/media_type_icon_side"
            android:layout_marginEnd="@dimen/media_type_icon_margin_end"
            android:contentDescription="@string/media_type_content_desc_image"
            app:layout_constraintBottom_toBottomOf="@+id/apod_card_rv_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/picture_card_ico" />

        <ImageView
            android:id="@+id/media_type_video_icon"
            android:layout_width="@dimen/media_type_icon_side"
            android:layout_height="@dimen/media_type_icon_side"
            android:layout_marginEnd="@dimen/media_type_icon_margin_end"
            android:contentDescription="@string/media_type_content_desc_video"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/apod_card_rv_date"
            app:layout_constraintEnd_toStartOf="@+id/media_type_image_icon"
            app:srcCompat="@drawable/video_player_ico" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>